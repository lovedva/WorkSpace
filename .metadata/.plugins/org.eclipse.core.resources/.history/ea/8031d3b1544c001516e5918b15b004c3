package helloworld;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;


public class Vehicles {
	int bike = 1;
	int car = 2;
	int airplane = 3;
	int ship = 4;
	int onfoot = 5;
	int vehicle = 5;

	void setVehicle() {
		BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
		try {
		System.out.println("请输入想选择的交通工具：1~5");
		String	line = reader.readLine();
		this.vehicle = Integer.valueOf(line);
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		
	}

	void getVehicle() {
		String vehicleName = null;
		if (vehicle == 5) {
			vehicleName = "步行";
		}
		if (vehicle == 1) {
			vehicleName = "自行车";
		}
		if (vehicle == 2) {
			vehicleName = "轿车";
		}
		if (vehicle == 3) {
			vehicleName = "飞机";
		}
		if (vehicle == 4) {
			vehicleName = "船";
		}
		System.out.println("已选择的交通工具为：" + vehicleName);
	}

	public Vehicles() {
		// TODO Auto-generated constructor stub
		if (vehicle == 5) {
			System.out.println("交通工具为：步行(默认)");
		}
	}
}
